<p id="notice"><%= notice %></p>

<h1>Listing Registered Applications</h1>
<div class="col-md-12">
  <%= pie_chart @pie_data %>
  <%= column_chart @pie_data %>
</div>

<div class="row col-md-12">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @registered_applications.each do |registered_application| %>
        <tr>
          <td><%= link_to registered_application.name, registered_application %></td>
          <td><%= link_to registered_application.url, registered_application.url %></td>
          <td><%= registered_application.user.email %></td>
          <td><%= link_to 'Edit', edit_registered_application_path(registered_application) %></td>
          <td><%= link_to 'Destroy', registered_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row col-md-12">
  <%= button_to 'New Registered application', new_registered_application_path, method: 'get', class: 'btn btn-success' %>
</div>